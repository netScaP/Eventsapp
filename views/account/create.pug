extends ../layout

block styles
	link(rel='stylesheet', href='/stylesheets/account/create.css')

block content
	if hasErrors
		each message in messages
			p= message
	div.become
		form.left(method="POST")
			p Become a Member
			p.easy It's Easy...
			div.name
				label(for="name")  Name:
				input(type="text", name="name", id="name")
			div.email
				label(for="email") Email:
				input(type="text", name="email", id="email")
			div.password
				label(for="password") Password:
				input(type="text", name="password", id="password")
			div.phone
				label(for="phone") Phone:
				input(type="number", name="phone", id="phone")
			div.roles
				input(type="radio", name="roles", id="technician", value="technician", checked)
				label(for="technician") Technician
				input(type="radio", name="roles", id="dispatcher", value="dispatcher")
				label(for="dispatcher") Dispatcher
				input(type='radio', name="roles", id="adimn", value="admin")
				label(for="admin") Admin
			input(type="text", name="code", placeholder="Confirmed code")
			input(type="hidden", name="_csrf", value= csrfToken)
			button(type="submit")
				span REGISTER
				img(src="../images/rightArrow.png", alt="")
			a(href="/user/signin") Already have an account?
		.right
			p Follow Us
			div.icons
				div.social
					a(href="#")
						img.facebook(src="../images/social/facebook.png", alt="")
					a(href="#")
						img(src="../images/social/twitter.png", alt="")
					a(href="#")
						img.google(src="../images/social/google.png", alt="")
			div.error
				if hasErrors
					each e in messages
						p= messages
block scripts